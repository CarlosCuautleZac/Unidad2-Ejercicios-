@model IEnumerable<Unidad2Ejercicio3.Models.Presidente>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/estilos.css" rel="stylesheet" />
    <title>Presidentes</title>
</head>
<body>
    <header>
        <img src="~/images/logo-mexico.png" />
        <p><a href="~/home/index">Presidentes de la República</a></p>
    </header>
    <main>
        <div class="imagenes">
            <ul>
                @foreach (var presidente in Model)
                {
                    <li>
                        <a href="~/home/biografia/@presidente.Id">
                            <img src="~/presidentes/@(presidente.Id).jpg">
                            <p>
                                @(presidente.Nombre)
                                <br>@(presidente.InicioGobierno.Year) - 
                                @if (presidente.TerminoGobierno != null)
                                {
                                    @presidente.TerminoGobierno.Value.Year;
                                }
                            </p>
                        </a>
                    </li>
                }

            </ul>
        </div>
    </main>
    <footer>
        <div class="footer">
            <p>Programación Web - Unidad 2</p>
            <img class="logo" src="~/images/logo-mexico.png" />
        </div>

    </footer>
</body>
</html>


